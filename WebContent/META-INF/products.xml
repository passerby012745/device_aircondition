<?xml version="1.0" encoding="UTF-8" ?>

<!-- brand:品牌名
	 manufacturer:厂商名  用于内部逻辑处理
	 brand-resource:品牌的资源名 
	 manufacturer-resource:厂商的资源名 用于界面显示 
	 resource:国际化资源文件路径 -->
<products brand="LIVE_HOME" 
		  manufacturer="SMART_BAY" 
		  resource="resource/resource.properties"
		  brand-resource="LIVE_HOME_BRAND" 
		  manufacturer-resource="SMART_BAY_MANUFACTURER"
		  alarm-template="resource/alarm-template.properties">
	
	<!-- implement-class: 驱动实现类类名-->
	<driver-config
		implement-class="com.szsbay.livehome.openlife.aircondition.DeviceDriver"
		discover-class="com.szsbay.livehome.openlife.aircondition.DeviceDiscoverer">
	</driver-config>
	
	<!-- 产品名称：hisenseKelon-->
	<product name ="hisenseKelon" description="LIVEHOME_AIRCONDITION_DESCRIPRION" title="LIVEHOME_AIRCONDITION_TITLE">
		<!-- 继承标准设备类 -->
		<classes>
			<class name="airConditioner" />
			<class name="humiditySensor" />
			<class name="temperatureSensor" />
			<class name="PM25Sensor" />
		</classes>
		
		<!-- 自定义property属性，可选 -->
		<properties>
			<!-- 空气质量-->
			<property name="airQuality" type="enum" description="the current indoor air quality" title="AIR_CONDITIONER_AIR_QUALITY_TITLE">
				<enum title="AIR_CONDITIONER_AIR_QUALITY_EXCELLENT">excellent</enum>
				<enum title="AIR_CONDITIONER_AIR_QUALITY_GOOD">good</enum>
				<enum title="AIR_CONDITIONER_AIR_QUALITY_MEDIUM">medium</enum>
				<enum title="AIR_CONDITIONER_AIR_QUALITY_BAD">bad</enum>
				<enum title="AIR_CONDITIONER_AIR_QUALITY_EXBAD">exbad</enum>
			</property>
			<!-- 上下风-->
			<property name="verticalWind" type="enum" description="the status of vertical wind direction" title="AIR_CONDITIONER_VERTICAL_WIND_STATE_TITLE">
				<enum title="AIR_CONDITIONER_VERTICAL_WIND_SCAN">scan</enum>
				<enum title="AIR_CONDITIONER_VERTICAL_WIND_FIX">fix</enum>
			</property>
			<!-- 左右风-->
			<property name="horizonWind" type="enum" description="the status of horizon wind direction" title="AIR_CONDITIONER_HORIZON_WIND_STATE_TITLE">
				<enum title="AIR_CONDITIONER_HORIZON_WIND_SCAN">scan</enum>
				<enum title="AIR_CONDITIONER_HORIZON_WIND_FIX">fix</enum>
			</property>
			<!-- 电热-->
			<property name="electricHeat" type="enum" description="the status of electric heat" title="AIR_CONDITIONER_ELECTRIC_HEAT_STATE_TITLE">
				<enum title="AIR_CONDITIONER_ELECTRIC_HEAT_ON">on</enum>
				<enum title="AIR_CONDITIONER_ELECTRIC_HEAT_OFF">off</enum>
			</property>
			<!-- 强力模式-->
			<property name="strongMode" type="enum" description="the status of normal strong mode" title="AIR_CONDITIONER_STRONG_MODE_TITLE">
				<enum title="AIR_CONDITIONER_STRONGE_MODE_ON">on</enum>
				<enum title="AIR_CONDITIONER_STRONGE_MODE_OFF">off</enum>
			</property>
			<!-- 睡眠模式-->
			<property name="sleepMode" type="enum" description="the status of normal sleep mode" title="AIR_CONDITIONER_SLEEP_MODE_TITLE">
				<enum title="AIR_CONDITIONER_SLEEP_MODE_ON">on</enum>
				<enum title="AIR_CONDITIONER_SLEEP_MODE_OFF">off</enum>
			</property>
		</properties>
		
		<!-- 自定义action动作，可选 -->
		<actions>
			<!-- 配置CDN-->
			<action name="configCDN" description="config device CDN address" title="LIVEHOME_AIRCONDITION_CONFIG_CDN_TITLE">
				<property name="ip" type="string" description="device CDN server ip address" title="AIR_CONDITIONER_IP_TITLE">
				</property>
				<property name="port" type="integer" description="device CDN server port" title="AIR_CONDITIONER_PORT_TITLE">
				</property>
			</action>
			
			<!-- 添加设备-->
			<action name="addDevice" description="add a device to huawei gateway according to sn" title="LIVEHOME_AIRCONDITION_ADD_DEVICE_TITLE">
				<property name="sn" type="string" description="the device sn that need to be added" title="AIR_CONDITIONER_ADD_DEVICE_SN_TITLE">
				</property>
			</action>
			
			<!-- 删除设备-->
			<action name="removeDevice" description="remove a device from huawei gateway according to sn" title="LIVEHOME_AIRCONDITION_REMOVE_DEVICE_TITLE">
				<property name="sn" type="string" description="the device sn that need to be removed" title="AIR_CONDITIONER_REMOVE_DEVICE_SN_TITLE">
				</property>
			</action>
			
			<!-- 开始指令缓存-->
			<action name="startCacheOrder" description="start to cache the orders" title="LIVEHOME_AIRCONDITION_START_CACHE_ORDER_TITLE">
			</action>
			
			<!-- 停止指令缓存-->
			<action name="stopCacheOrder" description="stop to cache the orders, and issues orders at once" title="LIVEHOME_AIRCONDITION_STOP_CACHE_ORDER_TITLE">
			</action>
			
			<!-- 辅助功能-->
			<action name="assistFunction" description="the other assistant functions about this product" title="LIVEHOME_AIRCONDITION_ASSIST_FUNCTION_TITLE">
				<property name="verticalWind" type="enum" description="the status of vertical wind direction" title="AIR_CONDITIONER_VERTICAL_WIND_STATE_TITLE">
					<enum title="AIR_CONDITIONER_VERTICAL_WIND_SCAN">scan</enum>
					<enum title="AIR_CONDITIONER_VERTICAL_WIND_FIX">fix</enum>
				</property>
				<property name="horizonWind" type="enum" description="the status of horizon wind direction" title="AIR_CONDITIONER_HORIZON_WIND_STATE_TITLE">
					<enum title="AIR_CONDITIONER_HORIZON_WIND_SCAN">scan</enum>
					<enum title="AIR_CONDITIONER_HORIZON_WIND_FIX">fix</enum>
				</property>
				<property name="electricHeat" type="enum" description="the status of electric heat" title="AIR_CONDITIONER_ELECTRIC_HEAT_STATE_TITLE">
					<enum title="AIR_CONDITIONER_ELECTRIC_HEAT_ON">on</enum>
					<enum title="AIR_CONDITIONER_ELECTRIC_HEAT_OFF">off</enum>
				</property>
				<property name="strongMode" type="enum" description="the status of normal strong mode" title="AIR_CONDITIONER_STRONG_MODE_TITLE">
					<enum title="AIR_CONDITIONER_STRONGE_MODE_ON">on</enum>
					<enum title="AIR_CONDITIONER_STRONGE_MODE_OFF">off</enum>
				</property>
			</action>
			
		</actions>
		
		<!-- 自定义alarm警报，可选 -->
		<alarms>
			<!--空调坏了-->
			<alarm name="ALARM_AIR_CONDITIONER_BROKEN" title="AIR_CONDITIONER_BROKEN" type="ALARM">
				<templates detail-view="DEVICE_LIST">
					<template title-resource="AIR_CONDITIONER_BROKEN_TEMPLATE_TITLE" content-resource="AIR_CONDITIONER_BROKEN_TEMPLATE_CONTENT">
					</template>
				</templates>
			</alarm>
			
			<!--预热完成事件-->
			<alarm name="EVENT_PREHEAT_FINISH" description="EVENT_PREHEAT_FINISH_DESCRIPTION" title="EVENT_PREHEAT_FINISH_TITLE" type="event">
				<templates detail-view="DEVICE_LIST">
					<template title-resource="EVENT_PREHEAT_FINISH_TEMPLATE_TITLE"
						content-resource="EVENT_PREHEAT_FINISH_TEMPLATE_CONTENT">
					</template>
				</templates>
			</alarm>
			
			<!--烘焙完成事件-->
			<alarm name="EVENT_BAKING_FINISH" description="EVENT_BAKING_FINISH_DESCRIPTION" title="EVENT_BAKING_FINISH_TITLE" type="event">
				<templates detail-view="DEVICE_LIST">
					<template title-resource="EVENT_BAKING_FINISH_TEMPLATE_TITLE"
						content-resource="EVENT_BAKING_FINISH_TEMPLATE_CONTENT">
					</template>
				</templates>
			</alarm>
			
		</alarms>
		
		<ifttt>
			<triggers>
				<alarm name="ALARM_PM25_GOOD" />
				<alarm name="ALARM_AIR_CONDITIONER_BROKEN" />
				
				<alarm name="EVENT_PREHEAT_FINISH" />
				<alarm name="EVENT_BAKING_FINISH" />
			</triggers>
		</ifttt>
		
		<!-- 配置设备界面，可选 -->
		<view>
			<!-- icon:在线设备图标路径
				 icon-offline:离线设备图标路径
				 device-control-entry:设备控制页面路径
				 device-guide-entry:设备安装指南页面路径 -->
			<icon>device/images/icon.png</icon>
			<icon-offline>device/images/icon_offline.png</icon-offline>
			<device-control-entry>device/index.html</device-control-entry>
			<device-guide-entry>device/install_guide.html</device-guide-entry>
		</view>

	</product>
</products>
